class Solution {
public:
    vector<int> dailyTemperatures(vector<int>& arr) {
        stack<int>stk;
        int n=arr.size();
        for(int i=0;i<n;i++){
        while(!stk.empty() && arr[stk.top()]<arr[i]){
            arr[stk.top()]=i-stk.top();
            stk.pop();
        }
        stk.push(i);
    }
        while(!stk.empty()){
            arr[stk.top()]=0;
            stk.pop();
        }
        return arr;
        
    }
};
